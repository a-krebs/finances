-extends 'shared/site_base.hamlpy'

-block content
	
	%form{'action' : "{% url registration:registration_register %}", 'method' : 'post' }
		-csrf_token
		
		%table
			-for field in form
				%tr
					%td
						= field.label_tag
					%td
						= field
					%td
						= field.errors
		
		%input{type : "submit", value : "Create Account" }
		%input{type : "hidden", name : "next", value : "={ next }" }